//定义刺激呈现的方式，text定义
======================================================================================================================================================================
//指导语
<text instructiontxt>
	/items = instruction
	/fontstyle = ("宋体", 4pct)
	/txbgcolor = (0,0,0)
	/txcolor = (255,255,255)
	/size = (1366,768)
	/hjustify = center
</text>


<text anykeytxt>
	/items = any
	/vposition = 70 pct
	/fontstyle = ("宋体", 24pt)
	/txcolor = (255,255,255)
	/txbgcolor = (transparent)
</text>
//注视点
<text fixation>
	/items = fixation
	/fontstyle = ("Arial", 48pt)
	/txcolor = (255,255,255)
	/txbgcolor = (transparent)
</text>

<text wordtxt>
	/items = word
	/fontstyle = ("宋体",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (255,255,255)
	/hjustify = center
</text>

<text charactertxt>
	/items = character
	/fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (255,255,255)
	/hjustify =  center
</text>

<text stimulus1txt>
	/items = stimulus1
	/fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (255,255,255)
	/halign = left
	/hposition = 55%
</text>

<text stimulus2txt>
	/items = stimulus2
	/fontstyle = ("Arial",60ptc)
	/txbgcolor = (0,0,0)
	/txcolor = (255,255,255)
	/halign = right
	/hposition = 45%
</text>

<text goodbyeinstructiontxt>
	/items = goodbyeinstruction
	/fontstyle = ("宋体", 4pct)
	/txbgcolor = (0,0,0)
	/txcolor = (255,255,255)
	/size = (1366,768)
	/hjustify = center
</text>
//定义trials，定义有效的按键反应，正确的按键反应，刺激呈现顺序等信息
======================================================================================================================================================================
<trial instruction>
	/validresponse = (anyresponse)
	/stimulusframes = [1=instructiontxt,anykeytxt]
	/recorddata = false
</trial>

<trial word>
	/stimulusframes = [1=wordtxt]
	/trialduration = 114
	/recorddata = false
</trial>

<trial character>
	/stimulusframes = [1=charactertxt]
	/trialduration = 286
	/recorddata = false
</trial>


<trial stimulus1>
	/stimulusframes = [1 = stimulus1txt]
	/validresponse = ("F","J")
	/correctresponse = ("F")
</trial>

<trial stimulus2>
	/stimulusframes = [1 = stimulus2txt]
	/validresponse = ("F","J")
	/correctresponse = ("J")
</trial>

<trial goodbyeinstruction>
	/validresponse = (anyresponse)
	/stimulusframes = [1=goodbyeinstructiontxt]
	/recorddata = false
</trial>
//定义blocks,定义属性信息，加入trails
======================================================================================================================================================================
<block instructionblk>
	/screencolor = (0,0,0)
	/trials = [1 = instruction]
</block>


<block wordblk>
	/screencolor = (0,0,0)
	/trials = [1= noreplacenorepeat(word);2 = noreplace(character); 3 = noreplace(stimulus1,stimulus2)]
</block>

<block goodbyeinstructionblk>
	/screencolor = (0,0,0)
	/trials = [1 = goodbyeinstruction]
</block>
//定义experiment
======================================================================================================================================================================
<expt>
	/blocks = [1 = instructionblk; 2-25=noreplace(wordblk);26 = goodbyeinstructionblk]
</expt>
